<header class="header_section">
	<div class="container-fluid position-fixed" style="z-index: 3;">
		<div class="row">
			<nav class="navbar navbar-expand-lg navbar-dark bg-fkdark pd-l-45">
				<div class="col-6">
					{# LOGO #}
					<div class="d-flex">
						<div>
							<a class="navbar-brand rotate180" href="{{ path('home') }}">
								<img src="/img/navbar/fakeit.svg" width="30" height="40" class="d-inline-block align-top" alt="Fakeit-Logo">
							</a>
						</div>
						{# MEJORAR EL DATA TOGGLE CUANDO SE HACE PEQUEÃ‘A LA VENTANA #}
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    						<span class="navbar-toggler-icon"></span>
  						</button>
						<div>
							  <div class="collapse navbar-collapse" id="navbarSupportedContent">
								<ul class="navbar-nav">
									<li class="nav-item margin-lr-20">
										<a class="nav-link" href="{{ path('home') }}"><h5>INICIO</h5></a>
									</li>
									<li class="nav-item margin-lr-20">
										<a class="nav-link" href="{{ path('play') }}"><h5>JUGAR</h5></a>
									</li>
									<li class="nav-item margin-lr-20">
										<a class="nav-link" href="{{ path('shop') }}"><h5>TIENDA</h5></a>
									</li>
									<li class="nav-item margin-lr-20 mt-1">
										<a href="{{ path('app_logout') }}" class="btn btn-danger btn-main">SALIR</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>

				
				

				<div class="col-3">
					<img src="/img/levels/level{{user.level}}.svg" width="30" height="50" alt="level-{{user}}" style="margin-right: 10px; margin-bottom: 10px; float:left;" id="userLevel">
					<p class="no-margin d-inline">~{{ user.elo }}~</p>
					
					<div class="progress" style="height: 3px; width: 30%; margin-top: 0px;">
						<div class="progress-bar" role="progressbar" style="width: {{ percentbar }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
					</div>
					<p class="no-margin" style="font-size: 12px;">Max: {{ elomax }}</p>
				</div>

				<div class="col-3">
					<div class="d-flex" style="float: right;">
						<div class="mr-5 text-center" id="userInfo">
							<h5>{{ user.nick }}</h5>
							<p class="no-margin font-s15 fakeit"><b>F</b> {{ user.fakeitPoints }}</p>
						</div>
							
						<div>
					 		{# REDIRIGIR AL PERFIL DEL USUARIO #}
							 {# {{ path('versus', {'idUser': user.id, 'idOpponent': opponentUser.id, 'idMap': map.id}) }} #}
							<a href="{{ path('profile', {'id': user.id}) }}">
								<img class="round-img" src="/img/imgUser/{{user.imgUser}}" width="65" height="65" alt="logo">
							</a>
						</div>
					</div>
				</div>
			</nav>
			<hr/>
		</div>
	</div>
</header>
