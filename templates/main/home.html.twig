{% extends 'base.html.twig' %}

{% block title %}FAKEIT - Home
{% endblock %}

{# NAVBAR #}
{% block nav %}
	{{ include('navbar/mainnavbar.html.twig') }}
{% endblock %}


{% block body %}
	<div class="container-fluid no-plr pd-t-68" id="splbg">
		<div class="row no-mlr pd-tb-40">
			<div class="col-1 col-sm-2 col-md-2 col-lg-2 col-xl-3"></div>
			<div class="col-10 col-sm-10 col-md-8 col-lg-8 col-xl-6 text-center">
				<img class="round-img" id="SPLogo" src="/img/SPL.jpg" style="width: 170px; float: left;">
				<h1 class="mt-4" id="SPL" style="padding-left: 250px;">
					<b>SPANISH PRO LEAGUE</b>
					<h1></div>
					<div class="col-1 col-sm-2 col-md-2 col-lg-2 col-xl-3"></div>
        </div>
        <hr class="w-999">
    </div>
    {% if user.activated == 1 %}
        <div class="row no-mlr mt-5 mb-5 text-center">
                <div class="col-2"></div>
                <div class="col-8">
                    <h1><b>TABLA DE PUNTUACIÓN</b></h1>
                </div>
                <div class="col-2"></div>
        </div>
        
        {# CABECERA RANKING #}
        <div class="row no-mlr mt-3 bg-fkgray2 text-center">
            
            <div class="col-3"><b>Posición</b></div>
            <div class="col-4 text-justify"><b>Jugador</b></div>
            <div class="col-2"><b>Victorias</b></div>
            <div class="col-3"><b>Puntos</b></div>
            
        </div>

        {% if size > 0 %}
            {% set i = 0 %}
            {% for u in users %}
                {% if i is divisible by(2) %}
                    <div class="row no-mlr mt-3 text-center">
                {% else %}
                    <div class="row no-mlr mt-3 bg-fkgray2 text-center">
                {% endif %}
                        <div class="col-3"><b>{{i + 1}}.</b></div>
                        <div class="col-4 text-justify">
                            <img src="/img/levels/level{{u.level}}.svg" width="20" height="30" alt="country_{{u.country}}">
                            <img src="/img/flags/{{u.country}}.svg" width="20" height="20" alt="country_{{u.country}}">
                            <a href="{{ path('profile', {'id': u.id}) }}">{{u}}</a>
                        </div>
                        <div class="col-2">{{u.wins}}</div>
                        <div class="col-3">{{u.wins * 3}}</div>
                    </div>
                    {% set i = i + 1 %}
            {% endfor %}
        {% else %}
            <div class="row no-mlr mt-3 text-center">
                <div class="col-2"></div>
                <div class="col-8">
                    <h1>NO HAY PARTIDAS JUGADAS</h1>
                    <a class="btn btn-primary" href="{{ path('play') }}">JUGAR</a>
                </div>
                <div class="col-2"></div>
            </div>
        {% endif %}

        <div class="row no-mlr">
            <br/>
        </div>
    {% else %}
        <div class="row no-mlr pd-tb-40 mt-5">
            <div class="col-1 col-sm-2 col-md-2 col-lg-2 col-xl-3"></div>
            <div class="col-10 col-sm-10 col-md-8 col-lg-8 col-xl-6 text-center">
                <div class="alert alert-warning" role="alert">
                    CONTACTE CON EL ADMINISTRADOR PARA REACTIVAR LA CUENTA
                </div>
            <div class="col-1 col-sm-2 col-md-2 col-lg-2 col-xl-3"></div>
        </div>
    {% endif %}
{% endblock %}
